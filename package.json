{
  "name": "dabao",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean:modules": "pnpm dlx rimraf node_modules apps/*/node_modules packages/*/node_modules",
    "clean:cache": "pnpm dlx rimraf .next .turbo",
    "clean": "pnpm run clean:modules && pnpm run clean:cache",
    "test": "npx jest",
    "test:watch": "npx jest --watch",
    "test:coverage": "npx jest --coverage",
    "test:auth": "npx jest test/services/AuthService.test.ts",
    "test:mcp": "npx jest test/services/MCPService.test.ts",
    "test:campaign": "npx jest test/services/CampaignService.test.ts",
    "test:telegram": "npx jest test/services/TelegramService.test.ts",
    "test:analytics": "npx jest test/services/AnalyticsService.test.ts"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.5.1",
    "rimraf": "^6.0.1",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.15.5",
  "engines": {
    "pnpm": ">=9",
    "node": ">=22"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "grammy": "^1.36.1"
  }
}
