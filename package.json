{
  "name": "dabao",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean:modules": "pnpm dlx rimraf node_modules apps/*/node_modules packages/*/node_modules",
    "clean:cache": "pnpm dlx rimraf .next .turbo",
    "clean": "pnpm run clean:modules && pnpm run clean:cache"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.5.1",
    "rimraf": "^6.0.1",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "framer-motion": "^12.9.2",
    "lucide-react": "^0.475.0",
    "next-themes": "^0.4.4"
  }
}
