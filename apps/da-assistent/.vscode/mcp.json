{
    "mcp": {
      "inputs": [
        {
          "type": "promptString",
          "id": "pg_url",
          "description": "PostgreSQL URL (e.g. postgresql://postgres:postgres@localhost:5432/dabao)"
        }
      ],
      "servers": {
        "postgres": {
          "command": "npx",
          "args": [
            "-y",
            "@modelcontextprotocol/server-postgres",
            "${input:pg_url}"
          ]
        }
      }
    },
    "servers": {
      "my-mcp-server": {
        "type": "stdio",
        "command": "PostgreSQL",
        "args": [
          "URL",
          "(e.g.",
          "postgresql://postgres:postgres@localhost:5432/dabao)"
        ],
      },
      "postgres": {
        "command": "docker",
        "args": [
          "run",
          "-i",
          "--rm",
          "-e",
          "POSTGRES_URL",
          "mcp/postgres",
          "postgresql://docker.internal.host:5432/dabao"
        ],
        "env": {
          "POSTGRES_URL": "postgresql://docker.internal.host:5432/dabao"
        }
      }
    }
  }